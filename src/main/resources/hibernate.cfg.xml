<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/simodatabase</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hbm2ddl.auto">update</property>
		

		<!--Mapeamento das e model -->
		<mapping class="mz.com.nova.modell.Cidade" />
		<mapping class="mz.com.nova.modell.Estado" />
		<mapping class="mz.com.nova.modell.Fabricante" />
		<mapping class="mz.com.nova.modell.Produto" />
		<mapping class="mz.com.nova.modell.Pessoa" />
		<mapping class="mz.com.nova.modell.Cliente" />
		<mapping class="mz.com.nova.modell.Funcionario" />
		<mapping class="mz.com.nova.modell.Usuario" />
		<mapping class="mz.com.nova.modell.Venda" />
		<mapping class="mz.com.nova.modell.ItemVenda" />

	</session-factory>
</hibernate-configuration>
